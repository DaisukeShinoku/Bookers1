<h1>Books</h1>

<table>
<thead>
<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
	<th></th>
	<th></th>
</tr>
</thead>
<% @books.each do |book| %>
<tbody>
	<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Show", "/books/#{book.id}" %></td>
	<td><%= link_to "Edit", "#" %></td>
	<td><%= link_to("Destroy", "#") %></td>
	</tr>
</tbody>
<% end %>
</table>


<h1>New Book</h1>

<%= form_for(@book, url: '/books') do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'create book' %>

<% end %>
