<h1>Books</h1>

<table>
<thead>
<tr>
	<th>Title</th>
	<th>Body</th>
	<th></th>
	<th></th>
	<th></th>
</tr>
</thead>
<% @books.each do |book| %>
<tbody>
	<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
	<td><%= link_to "Show", book_path(book.id) %></td>
	<td><%= link_to "Edit", edit_book_path(book.id) %></td>
	<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
	</tr>
</tbody>
<% end %>
</table>

<h2>New Book</h2>

<%= form_for(@book, url: '/books') do |f| %>

	<% if @book.errors.any? %>
	<div class="error_explanation">
     <h4 class="error_title"><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
    </div>
  <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <div class="btn"><%= f.submit 'Create book' %></div>

<% end %>
