<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
    <div class="error_explanation">
        <h4 class="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
        <ul class="error_detail">
            <% @book.errors.full_messages.each do |message| %>
            <li class="error_msg"><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

     <ul class="form_title">
    <li><%= f.label :title, "Title" %></li>
    <li><%= f.text_field :title %></li>
    </ul>
    <ul class="form_body">
    <li><%= f.label :body, "Body" %></li>
    <li><%= f.text_area :body %></li>
    </ul>

    <div class="btn"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= "|" %>
<%= link_to "Back", books_path %>